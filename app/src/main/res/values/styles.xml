<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeGray" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/green</item>
        <item name="colorButtonNormal">@color/gray</item>
    </style>

    <style name="ThemeGreen" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/gray</item>
        <item name="colorButtonNormal">@color/green</item>
    </style>

</resources>
